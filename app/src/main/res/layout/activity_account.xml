<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/say_account_details"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"
            android:textColor="#212121" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:background="@drawable/gradient_background"
            android:padding="16dp"
            android:elevation="2dp">

            <!-- Username Row -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/say_username"
                    android:textSize="16sp"
                    android:textColor="@color/smoke"
                    android:paddingEnd="16dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <EditText
                        android:id="@+id/uname_text"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:imeOptions="actionNone"
                        android:autofillHints=""
                        android:inputType="text"
                        android:hint="@string/change_username"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:paddingEnd="5dp"/>

                    <Button
                        android:id="@+id/uname_button"
                        android:layout_width="30dp"
                        android:textSize="12sp"
                        android:background="@color/pink_accent"
                        android:layout_height="30dp"
                        android:text="@string/say_change" />
                </LinearLayout>
            </TableRow>

            <!-- Email Row -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/say_email"
                    android:textSize="16sp"
                    android:textColor="@color/smoke"
                    android:paddingEnd="16dp" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/say_loading"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </TableRow>

            <!-- Messages Remaining Row -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/say_messages_remaining"
                    android:textSize="16sp"
                    android:textColor="@color/smoke"
                    android:paddingEnd="16dp" />

                <TextView
                    android:id="@+id/tvMessagesRemaining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/say_loading"
                    android:textSize="16sp"
                    android:textColor="@color/white" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/logout_button"
            android:layout_width="80sp"
            android:layout_height="30sp"
            android:background="@color/smoke"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/black"
            android:text="@string/say_logout" />
    </LinearLayout>
</FrameLayout>
